; mount-sdbox

sd_multiboot:c/ask "This will attempt to mount SD-BOX as SD0:. Continue? (Y/N)"

sd_multiboot:c/if not WARN
  sd_multiboot:c/quit
sd_multiboot:c/endif

sd_multiboot:c/assign RL: L:
sd_multiboot:c/assign RDEVS: DEVS:
sd_multiboot:c/assign L: RAM:mount-kit/L
sd_multiboot:c/assign DEVS: RAM:mount-kit/DEVS

sd_multiboot:c/mount sd0:
sd_multiboot:c/dir sd0:

sd_multiboot:c/assign L: RL:
sd_multiboot:c/assign DEVS: RDEVS:
sd_multiboot:c/assign RL: REMOVE
sd_multiboot:c/assign RDEVS: REMOVE
